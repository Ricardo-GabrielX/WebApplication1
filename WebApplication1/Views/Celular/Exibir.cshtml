@model WebApplication1.Models.Celular

@{
    ViewBag.Title = "Exibir";
    var linkEditar = Url.Action("Editar", new { id = ViewBag.Id });
    var linkVoltar = Url.Action("Listar");
}

<div class="detail-container">
    <div class="detail-header">
        <div class="detail-icon">
            <i class="bi bi-phone"></i>
        </div>
        <h1 class="detail-title">Detalhes do Celular</h1>
        <div class="detail-subtitle">Informações cadastrais</div>
    </div>

    <div class="detail-card">
        <dl class="detail-list">
            <div class="detail-item">
                <dt>@Html.DisplayNameFor(model => model.Numero)</dt>
                <dd>@Html.DisplayFor(model => model.NumeroFormatado)</dd>
            </div>

            <div class="detail-item">
                <dt>@Html.DisplayNameFor(model => model.Marca)</dt>
                <dd>@Html.DisplayFor(model => model.Marca)</dd>
            </div>

            <div class="detail-item">
                <dt>@Html.DisplayNameFor(model => model.Novo)</dt>
                <dd>@Html.DisplayFor(model => model.Novo)</dd>
            </div>

            <div class="detail-item">
                <dt>@Html.DisplayNameFor(model => model.DataCompra)</dt>
                <dd>@Html.DisplayFor(model => model.DataCompra)</dd>
            </div>
        </dl>
    </div>

    <div class="detail-actions">
        <a href="@linkVoltar" class="button-btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
        <a href="@linkEditar" class="button-btn-primary">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</div>
