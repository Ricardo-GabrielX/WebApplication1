@model WebApplication1.Models.Aluno
@{
    ViewBag.Title = "Detalhes do Aluno";
    var linkEditar = Url.Action("Editar", new { id = ViewBag.Id });
    var linkVoltar = Url.Action("Listar");
}

<div class="detail-container">
    <div class="detail-header">
        <div class="detail-icon">
            <i class="bi bi-person-badge"></i>
        </div>
        <h1 class="detail-title">Detalhes do Aluno</h1>
        <div class="detail-subtitle">Informações cadastrais</div>
    </div>

    <div class="detail-card">
        <dl class="detail-list">
            <div class="detail-item">
                <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd>@Html.DisplayFor(model => model.Nome)</dd>
            </div>

            <div class="detail-item">
                <dt>@Html.DisplayNameFor(model => model.RA)</dt>
                <dd>@Html.DisplayFor(model => model.RA)</dd>
            </div>

            <div class="detail-item">
                <dt>@Html.DisplayNameFor(model => model.Data)</dt>
                <dd>@Html.DisplayFor(model => model.Data)</dd>
            </div>
        </dl>
    </div>

    <div class="detail-actions">
        <a href="@linkVoltar" class="button-btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
        <a href="@linkEditar" class="button-btn-primary">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
    </div>
</div>