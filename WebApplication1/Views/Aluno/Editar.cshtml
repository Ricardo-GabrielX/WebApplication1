@model WebApplication1.Models.Aluno
@{
    ViewBag.Title = "Editar Aluno";
    var link = Url.Action("Listar");
}

<div class="edit-container">
    <div class="edit-header">
        <div class="edit-icon">
            <i class="bi bi-pencil-square"></i>
        </div>
        <h1 class="edit-title">Editar Aluno</h1>
        <div class="edit-subtitle">Atualize os dados do cadastro</div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="edit-form">
            @Html.ValidationSummary(true, "", new { @class = "edit-validation-summary" })

            <div class="edit-form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "edit-form-label" })
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "edit-form-input", placeholder = "Nome completo" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "edit-validation-message" })
            </div>

            <div class="edit-form-group">
                @Html.LabelFor(model => model.RA, htmlAttributes: new { @class = "edit-form-label" })
                @Html.EditorFor(model => model.RA, new { htmlAttributes = new { @class = "edit-form-input", placeholder = "000000000" } })
                @Html.ValidationMessageFor(model => model.RA, "", new { @class = "edit-validation-message" })
            </div>

            <div class="edit-form-group">
                @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "edit-form-label" })
                @Html.TextBoxFor(model => model.Data, "{0:yyyy-MM-dd}", new { @class = "edit-form-input", type = "date" })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "edit-validation-message" })
            </div>

            <div class="edit-form-actions">
                <a href="@link" class="button-btn-secondary">
                    <i class="bi bi-x-circle-fill"></i> Cancelar
                </a>
                <button type="submit" class="button-btn-primary">
                    <i class="bi bi-check-circle-fill"></i> Salvar Alterações
                </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}