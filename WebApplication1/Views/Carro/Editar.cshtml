@model WebApplication1.Models.Carro

@{
    ViewBag.Title = "Editar";
    var link = Url.Action("Listar");
}

<div class="edit-container">
    <div class="edit-header">
        <div class="edit-icon">
            <i class="bi bi-pencil-square"></i>
        </div>
        <h1 class="edit-title">Editar Carro</h1>
        <div class="edit-subtitle">Atualize os dados do cadastro</div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="edit-form">
            @Html.ValidationSummary(true, "", new { @class = "edit-validation-summary" })

            <div class="edit-form-group">
                @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "edit-form-label" })
                @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "edit-form-input", placeholder = "Nome completo" } })
                @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "edit-validation-message" })
            </div>

            <div class="edit-form-group">
                @Html.LabelFor(model => model.Cor, htmlAttributes: new { @class = "edit-form-label" })
                @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "edit-form-input", placeholder = "000000000" } })
                @Html.ValidationMessageFor(model => model.Cor, "", new { @class = "edit-validation-message" })
            </div>

            <div class="edit-form-group">
                @Html.LabelFor(model => model.DataFabricacao, htmlAttributes: new { @class = "edit-form-label" })
                @Html.TextBoxFor(model => model.DataFabricacao, "{0:yyyy-MM-dd}", new { @class = "edit-form-input", type = "date" })
                @Html.ValidationMessageFor(model => model.DataFabricacao, "", new { @class = "edit-validation-message" })
            </div>


        </div>

        <div class="edit-form-actions">
            <a href="@link" class="button-btn-secondary">
                <i class="bi bi-x-circle-fill"></i> Cancelar
            </a>
            <button type="submit" class="button-btn-primary">
                <i class="bi bi-check-circle-fill"></i> Salvar Alterações
            </button>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}