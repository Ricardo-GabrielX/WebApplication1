@model WebApplication1.Models.Carro

@{
    ViewBag.Title = "Create";
    var link = Url.Action("Listar");
}

<div class="form-container">
    <div class="form-header">
        <div class="form-icon">
            <i class="bi bi-person-plus"></i>
        </div>
        <h1 class="form-title">Cadastrar Carro</h1>
        <div class="form-subtitle">Preencha os dados do novo carro</div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-fields-container">
                <div class="form-group">
                    @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-input", placeholder = "Placa do seu carro" } })
                    @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "form-validation" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Cor, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-input", placeholder = "Cor do seu carro" } })
                    @Html.ValidationMessageFor(model => model.Cor, "", new { @class = "form-validation" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataFabricacao, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.DataFabricacao, new { htmlAttributes = new { @class = "form-input", type = "date" } })
                    @Html.ValidationMessageFor(model => model.DataFabricacao, "", new { @class = "form-validation" })
                </div>
            </div>

            <div class="form-actions">
                <a href="@link" class="button-btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="button-btn-primary">
                    <i class="bi bi-check-lg"></i> Salvar
                </button>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

